<div class="col-md-4 mx-auto">
    <div class="card">
    <div class="card-header">
        <h3>New Stock</h3>
    </div>
    <div class="card-body">
        <form action="/stocks/new-stock" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Escribe nombre" 
                autofocus>
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control" 
                    placeholder="Escriba la descripcion"></textarea>
            </div>
            <div class="form-group">
                <input type="text" name="amount" class="form-control" placeholder="Cantidad">
            </div>
            <div class="form-group">
                <input type="text" name="price" class="form-control" placeholder="Precio por unidad">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
</div>